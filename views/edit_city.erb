<h1>Update <%= @city.name() %></h1>

<form action="/cities/<%= @city.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="city_name">Rename city</label>
  <input id="city_name" name="city_name" type="text">
  <button type="submit">Update</button>
</form>

<form action="/cities/<%= @city.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="train_name">Train Name</label>
  <input id="train_name" name="train_name" type="text">
  <label for="time">Departure time (hr:min)</label>
  <input type="time" id="time" name="train_time">
  <button type="submit">Add Train with Departure Time</button>
</form>

<p><a href="/cities">Return to cities list</a></p>

<form action="/cities/<%= @city.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete city</button>
</form>