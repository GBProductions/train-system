<h1>Update <%= @train.name() %></h1>

<form action="/trains/<%= @train.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="train_name">Rename train</label>
  <input id="train_name" name="train_name" type="text">
  <button type="submit">Update</button>
</form>

<form action="/trains/<%= @train.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="city_name">Add city</label>
  <input id="city_name" name="city_name" type="text">
  <label for="time">Departure time (hr:min)</label>
  <input type="time" id="time" name="train_time">
  <button type="submit">Add City with Departure Time</button>
</form>

<p><a href="/trains">Return to train list</a></p>

<form action="/trains/<%= @train.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete train</button>
</form>